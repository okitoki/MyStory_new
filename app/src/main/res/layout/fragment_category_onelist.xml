<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_white_background"
    tools:context="com.thedot.mystoryinenglishn.Index.CategoryFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dip">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cate_sum_img"
                android:layout_width="150dip"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/cate_img_sample" />
        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dip">

            <TextView
                android:id="@+id/cate_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Daily"
                android:textColor="@color/list_text_color"
                android:textSize="16dip"
                android:typeface="serif" />

            <TextView
                android:id="@+id/cate_kor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="규칙적인 나의 하루"
                android:textColor="@color/recordingfile_del_wrap_black"
                android:textSize="12dip"
                android:typeface="serif" />

            <TextView
                android:id="@+id/cate_unit_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cate_name_left"
                android:paddingLeft="5dp"
                android:paddingTop="5dip"
                android:text="10 episodes"
                android:textColor="@color/recordingfile_del_wrap_black"
                android:textSize="10dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp">

        <ToggleButton
            android:id="@+id/btn_detail_like"
            android:layout_width="20dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/togglebutton_heart_small"
            android:checked="false"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/touch_blank"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhiteAlpha"
        android:visibility="gone" />
</RelativeLayout>
