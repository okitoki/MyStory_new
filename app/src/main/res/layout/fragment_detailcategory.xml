<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.thedot.mystoryinenglishn.Index.CategoryDetailFragment"
    android:background="@color/listview_white_background">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_download"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/top_area" />
    <LinearLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/listview_white_background"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <ImageButton
            android:id="@+id/btn_detailcategory_back"
            android:layout_width="63dp"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Category Name"
            android:textColor="@color/colorBlack"
            android:textSize="18dip" />

        <ImageButton
            android:id="@+id/btn_detailcategory_setting"
            android:layout_width="67dp"
            android:layout_height="35dp"
            android:layout_alignRight="@+id/top_area"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_setting" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_bottom_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Download" />
    </RelativeLayout>

</RelativeLayout>
