<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dip">

    <ImageView
        android:id="@+id/cate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/cate1_img" />

    <TextView
        android:id="@+id/eng_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:text="Greeting(8)"
        android:textColor="@color/colorBlack"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/kor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="영어로 인사 제대로 하기"
        android:textColor="@color/colorGray"
        android:textSize="12dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/index_heart_icon"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/togglebutton_heart_small"
            android:textOff=""
            android:textOn="" />

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_gray"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:padding="10dp"
            app:srcCompat="@drawable/btn_main_download" />

        <ImageButton
            android:id="@+id/btn_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_trash" />

        <ProgressBar
            android:id="@+id/download_progress"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
