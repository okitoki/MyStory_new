<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.thedot.mystoryinenglishn.Index.CategoryFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cate_sum_img_left"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/cate_img_sample" />

                <TextView
                    android:id="@+id/cate_name_left"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="@color/listview_white_background"
                    android:textSize="16dip"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/cate_unit_number_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cate_name_left"
                    android:paddingLeft="5dp"
                    android:text="TextView"
                    android:textSize="10dip" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cate_korname_left"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/list_text_color"
                android:textSize="11dip" />

                <ToggleButton
                    android:id="@+id/btn_detail_like_left"
                    android:layout_width="15dip"
                    android:layout_height="13.5dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/togglebutton_heart_small"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cate_list_right_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cate_sum_img_right"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cate_img_sample" />


                <TextView
                    android:id="@+id/cate_name_right"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="@color/listview_white_background"
                    android:textSize="16dip"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/cate_unit_number_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cate_name_right"
                    android:paddingLeft="5dp"
                    android:text="TextView"
                    android:textSize="11dip" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cate_korname_right"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/list_text_color"
                    android:textSize="11dip" />

                <ToggleButton
                    android:id="@+id/btn_detail_like_right"
                    android:layout_width="15dip"
                    android:layout_height="13.5dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/togglebutton_heart_small"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
